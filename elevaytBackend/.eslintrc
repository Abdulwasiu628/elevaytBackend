{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:recommended"
  ],
  "plugins": [
    "express"
  ],
  "settings": {
    "express": {
      "version": "~4.16.1"
    }
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // Your custom rules go here
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-var": "error",
    "no-unused-vars": "warn",
    "arrow-spacing": "error"

  }
}
